package main;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		int num = input.nextInt();
	
		for(int i = num; i < 0; i--) {
	
			for(int a = 0; a < i; a++) {
				
				for(int j = num -1 ; j > 0; j--) {
					System.out.print(" ");
				}
				System.out.print("*");
			}
			
			
			System.out.println();
		}
	}
}