package main;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		int num = input.nextInt();
		int num1 = 0, num2 = 0;
		for(int i = 1; i <= num; i++) {
			num1 = input.nextInt();
			num2 = input.nextInt();
			System.out.println();
			
		}
		
		for(int i = 1; i <= num; i++) {
			System.out.println(num1 + num2);
			System.out.println();
			
		}
	}
}