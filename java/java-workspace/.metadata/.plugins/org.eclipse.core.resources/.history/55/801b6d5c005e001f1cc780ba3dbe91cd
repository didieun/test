package main;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		int num = input.nextInt();
	
		for(int i = 1; i <= num; i++) {
			for(int j = num; j >= 0; j--) {
				for(int a = i; a >= 0; a--) {
					System.out.print(" ");
					
				}
				System.out.print("*");
			}
			
			System.out.println();
		}
	}
}